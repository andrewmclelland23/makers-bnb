<div class="col-9">
  <h2>Book a space</h2>
</div>
<div class="col-3">
  <a href="/spaces/new" class="float-right btn btn-primary">Add a new listing</a>
</div>
<div>
  <form action="/spaces/filter" method="post">
    <input type="date" name="start_date">
    <input type="date" name="end_date">
    <input type="submit" value="Filter">
  </form>
  <form action="/spaces/filter" method="post">
    <input type="hidden" name="_method" value='DELETE'>
    <input type="submit" value="Clear">
  </form>
</div>
<section id="available-spaces" class="col-12">
  <% @spaces.each do |space| %>
    <div class="space card">
      <div class="card-body">
        <h3><%= space.name %></h3>
        <div class="space-details">
          <section><%= space.description %></section>
          <div>Price per night: Â£<%= space.price %></div>
        </div>
        <a class="btn btn-primary active" href="/requests/new/<%= space.id %>">Request to book</a>
      </div>
    </div>
  <% end %>
</section>
